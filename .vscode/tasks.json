{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build only once",
            "type": "npm",
            "script": "compile",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            }
        },
        {
            "label": "watch",
            "type": "npm",
            "script": "watch",
            "problemMatcher": "$tsc-watch",
            "isBackground": true,
            "presentation": {
                "reveal": "never"
            },
            "group": {
                "kind": "watch",
                "isDefault": true
            }
        }
    ]
}
