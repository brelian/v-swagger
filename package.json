{
    "name": "v-swagger",
    "displayName": "v-swagger",
    "description": "A VS Code plugin that visualizes Swagger/OpenAPI definitions",
    "version": "0.0.2",
    "engines": {
        "vscode": "^1.78.0",
        "node": "^18.13.0",
        "npm": "^8.19.3"
    },
    "categories": [
        "Swagger",
        "OpenAPI"
    ],
    "activationEvents": [],
    "main": "./dist/index.js",
    "contributes": {
        "commands": [
            {
                "command": "v-swagger.preview",
                "title": "Preview Swagger"
            }
        ],
        "menus": {
            "editor/title": [
                {
                    "when": "resourceLangId == yaml",
                    "command": "v-swagger.preview",
                    "group": "navigation"
                }
            ]
        },
        "configuration": {
            "type": "object",
            "title": "V-Swagger Configuration",
            "properties": {
                "v-swagger.defaultPort": {
                    "type": "integer",
                    "default": 18512,
                    "description": "Default port in which the preview should be opened."
                },
                "v-swagger.previewInBrowser": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to open preview in browser, default: preview inside vscode"
                },
                "v-swagger.pathRewrite": {
                    "type": "object",
                    "additionalProperties": {
                        "type": "string"
                    },
                    "default": {},
                    "example": {
                        "^/api/old-path": "/api/new-path"
                    },
                    "description": "Path rewrite rules. 'key' is replaced with 'value'. Regex is supported in key. The rules only can be used in the reference starting with $ref"
                }
            }
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts --fix",
        "lint:check": "eslint src --ext ts",
        "format": "npx prettier --write .",
        "format:check": "npx prettier --check .",
        "pretest": "npm run compile && npm run lint",
        "test": "npx jest --maxWorkers=4 --logHeapUsage --coverage --coverageThreshold '{}' --forceExit",
        "prepare": "husky install",
        "package": "npx vsce package"
    },
    "lint-staged": {
        "*.ts|.json": [
            "eslint --fix",
            "prettier --write"
        ],
        "*.md": [
            "prettier --write"
        ]
    },
    "devDependencies": {
        "@commitlint/cli": "^17.6.3",
        "@commitlint/config-conventional": "^17.6.3",
        "@types/express": "^4.17.17",
        "@types/jest": "^29.5.1",
        "@types/js-yaml": "^4.0.5",
        "@types/lodash": "^4.14.194",
        "@types/node": "16.x",
        "@types/vscode": "^1.78.0",
        "@typescript-eslint/eslint-plugin": "^5.59.1",
        "@typescript-eslint/parser": "^5.59.1",
        "@vscode/test-electron": "^2.3.0",
        "eslint": "^8.39.0",
        "eslint-plugin-filenames": "^1.3.2",
        "husky": "^8.0.3",
        "jest": "^29.5.0",
        "lint-staged": "^13.2.2",
        "openapi-types": "^12.1.0",
        "prettier": "2.8.1",
        "prettier-eslint": "15.0.1",
        "ts-jest": "^29.1.0",
        "typescript": "^5.0.4"
    },
    "dependencies": {
        "@apidevtools/swagger-parser": "^10.1.0",
        "express": "^4.18.2",
        "lodash": "^4.17.21",
        "portfinder": "^1.0.32",
        "socket.io": "^4.6.1",
        "swagger-ui-dist": "^4.18.3"
    }
}
